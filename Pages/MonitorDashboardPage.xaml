<Page x:Class="WindowsDebloater.Pages.MonitorDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="MonitorDashboard">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40,30,40,30">
            <!-- Header -->
            <TextBlock Text="ðŸ“Š System Monitor Dashboard" 
                      FontSize="28" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,10"/>
            <TextBlock Text="Real-time CPU, GPU, and system monitoring" 
                      FontSize="14" 
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                      Margin="0,0,0,30"/>

            <!-- Stats Grid -->
            <Grid Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CPU Usage -->
                <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,7,0">
                    <StackPanel>
                        <TextBlock Text="CPU Usage" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock x:Name="CPUUsageText" Text="0%" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                        <ProgressBar x:Name="CPUProgressBar" Value="0" Maximum="100" Height="8" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- RAM Usage -->
                <Border Grid.Column="1" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="7,0">
                    <StackPanel>
                        <TextBlock Text="RAM Usage" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock x:Name="RAMUsageText" Text="0%" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                        <ProgressBar x:Name="RAMProgressBar" Value="0" Maximum="100" Height="8" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- GPU Usage -->
                <Border Grid.Column="2" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="7,0">
                    <StackPanel>
                        <TextBlock Text="GPU Usage" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock x:Name="GPUUsageText" Text="0%" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                        <ProgressBar x:Name="GPUProgressBar" Value="0" Maximum="100" Height="8" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Disk Usage -->
                <Border Grid.Column="3" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="7,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Disk Usage" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock x:Name="DiskUsageText" Text="0%" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                        <ProgressBar x:Name="DiskProgressBar" Value="0" Maximum="100" Height="8" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Temperature Monitoring -->
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ðŸŒ¡ï¸ Temperature Monitoring" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="CPU Temperature" FontSize="14" Margin="0,0,0,5"/>
                            <TextBlock x:Name="CPUTempText" 
                                      Text="-- Â°C" 
                                      FontSize="36" 
                                      FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="GPU Temperature" FontSize="14" Margin="0,0,0,5"/>
                            <TextBlock x:Name="GPUTempText" 
                                      Text="-- Â°C" 
                                      FontSize="36" 
                                      FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- System Info -->
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="System Information" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="CPU:" Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="CPUInfoText" Text="Loading..." Margin="0,5" FontWeight="SemiBold"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="RAM:" Margin="0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="RAMInfoText" Text="Loading..." Margin="0,5" FontWeight="SemiBold"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="GPU:" Margin="0,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="GPUInfoText" Text="Loading..." Margin="0,5" FontWeight="SemiBold"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Motherboard:" Margin="0,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="MotherboardText" Text="Loading..." Margin="0,5" FontWeight="SemiBold"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Uptime:" Margin="0,5"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="UptimeText" Text="Loading..." Margin="0,5" FontWeight="SemiBold"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Top Processes -->
            <TextBlock Text="Top Resource Consumers" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,15"/>
            
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="4" Padding="0">
                <ListView x:Name="ProcessListView"
                         Height="250"
                         BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Process" Width="180">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ProcessName}" FontWeight="SemiBold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="CPU %" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CpuUsage}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Memory (MB)" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding MemoryMB}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Disk" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DiskUsage}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="PID" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ProcessId}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <Button Content="ðŸ”„ Refresh" 
                   Click="Refresh_Click"
                   Margin="0,10,0,0"
                   Padding="15,8"
                   HorizontalAlignment="Left"/>
        </StackPanel>
    </ScrollViewer>
</Page>
