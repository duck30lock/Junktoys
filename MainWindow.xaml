<Window x:Class="WindowsDebloater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="🎃 Junktoys - Halloween Edition 🎃" 
        Height="700" 
        Width="1100"
        MinHeight="600"
        MinWidth="900"
        Background="#1A1A1A">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Simplified Navigation -->
        <Border Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="#FF6600" Background="#0D0D0D">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock Text="🎃 Junktoys 🎃" FontSize="20" FontWeight="Bold" Margin="10" Foreground="#FF6600"/>
                    
                    <Button Content="🎃 Quick Clean" Margin="5" Padding="12,8" Click="QuickClean_Click" 
                           Background="#FF6600" Foreground="White" FontWeight="Bold"
                           BorderBrush="#FF8800" BorderThickness="2"/>
                    <Separator Margin="10,15" Background="#FF6600"/>
                    
                    <!-- Original Features -->
                    <RadioButton x:Name="BackgroundAppsBtn" Content="Background Apps" Style="{StaticResource NavigationRadioButtonStyle}"
                               IsChecked="True" Checked="Navigation_Checked" Tag="BackgroundApps"/>
                    <RadioButton Content="Bloatware" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="Bloatware"/>
                    <RadioButton Content="Startup" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="Startup"/>
                    <RadioButton Content="Services" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="Services"/>
                    <RadioButton Content="⚡ Advanced" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="Advanced" FontWeight="Bold"/>
                    
                    <Separator Margin="10,15" Background="#FF6600"/>
                    <TextBlock Text="👻 SPOOKY FEATURES 👻" FontSize="11" FontWeight="Bold" Margin="10,5" Foreground="#FF6600"/>
                    
                    <!-- New Crazy Features -->
                    <RadioButton Content="🎮 Game Mode" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="GameMode"/>
                    <RadioButton Content="💾 RAM Turbo" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="RAMTurbo"/>
                    <RadioButton Content="❄️ Process Freezer" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="ProcessFreezer"/>
                    <RadioButton Content="🌐 Network Tools" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="NetworkTools"/>
                    <RadioButton Content="📊 Monitor" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="Monitor"/>
                    <RadioButton Content="🤖 Auto-Pilot" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="AutoPilot"/>
                    <RadioButton Content="🧹 Registry Cleaner" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="RegistryCleaner"/>
                    <RadioButton Content="💼 Profiles" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="Profiles"/>
                    <RadioButton Content="📁 Disk Analyzer" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="DiskAnalyzer"/>
                    <RadioButton Content="⚡ System Tweaker" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="SystemTweaker"/>
                    
                    <Separator Margin="10,15" Background="#FF6600"/>
                    <RadioButton Content="Settings" Style="{StaticResource NavigationRadioButtonStyle}"
                               Checked="Navigation_Checked" Tag="Settings"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Content -->
        <Frame x:Name="ContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
