<Page x:Class="WindowsDebloater.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="Settings">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40,30,40,30" MaxWidth="800">
            <!-- Header -->
            <TextBlock Text="Settings" 
                      FontSize="28" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,10"/>
            <TextBlock Text="Configure Junktoys preferences" 
                      FontSize="14" 
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                      Margin="0,0,0,30"/>

            <!-- Appearance -->
            <TextBlock Text="Appearance" 
                      FontSize="18" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,15"/>
            
            <StackPanel Margin="0,0,0,30">
                <RadioButton x:Name="LightThemeRadio" Content="Light Theme" 
                           GroupName="Theme"
                           Checked="LightTheme_Checked"
                           Margin="0,5"/>
                <RadioButton x:Name="DarkThemeRadio" Content="Dark Theme" 
                           GroupName="Theme"
                           Checked="DarkTheme_Checked"
                           Margin="0,5"/>
            </StackPanel>

            <!-- Auto-Start -->
            <TextBlock Text="Startup" 
                      FontSize="18" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,15"/>
            
            <CheckBox Content="Run Junktoys at system startup"
                     Margin="0,5,0,30"/>

            <!-- Safety -->
            <TextBlock Text="Safety Options" 
                      FontSize="18" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,15"/>
            
            <StackPanel Margin="0,0,0,30">
                <CheckBox Content="Show confirmation dialogs"
                         IsChecked="True"
                         Margin="0,5"/>
                <CheckBox Content="Create system restore point before major changes"
                         IsChecked="True"
                         Margin="0,5"/>
                <CheckBox Content="Enable detailed logging"
                         Margin="0,5"/>
            </StackPanel>

            <!-- Actions -->
            <TextBlock Text="System Actions" 
                      FontSize="18" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,15"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="Create Restore Point" 
                       Click="CreateRestorePoint_Click"
                       Margin="0,0,10,0"
                       Padding="15,8"/>
                <Button Content="Open Task Manager" 
                       Click="OpenTaskManager_Click"
                       Margin="0,0,10,0"
                       Padding="15,8"/>
                <Button Content="Clear Cache" 
                       Click="ClearCache_Click"
                       Padding="15,8"/>
            </StackPanel>

            <!-- About App -->
            <Separator Margin="0,20"/>
            
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Application Version: 1.0.0" 
                          FontSize="13"
                          Margin="0,5"/>
                <TextBlock Text="Â© 2025 Junktoys Team" 
                          FontSize="13"
                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                          Margin="0,5"/>
            </StackPanel>

            <!-- Status -->
            <TextBlock x:Name="StatusTextBlock" 
                      Margin="0,20,0,0"
                      FontSize="13"
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
