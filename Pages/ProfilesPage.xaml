<Page x:Class="WindowsDebloater.Pages.ProfilesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="Profiles">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40,30,40,30">
            <!-- Header -->
            <TextBlock Text="💼 Custom Profiles" 
                      FontSize="28" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,10"/>
            <TextBlock Text="Save and load optimization profiles for different scenarios" 
                      FontSize="14" 
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                      Margin="0,0,0,30"/>

            <!-- Current Profile -->
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Current Active Profile" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="CurrentProfileText" 
                              Text="Default" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="#00D900"/>
                </StackPanel>
            </Border>

            <!-- Preset Profiles -->
            <TextBlock Text="Preset Profiles" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,15"/>
            
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Gaming Profile -->
                <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,10,0"
                       MouseLeftButtonDown="GamingProfile_Click" Cursor="Hand">
                    <StackPanel>
                        <TextBlock Text="🎮 Gaming" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Max performance for gaming" FontSize="12" Margin="0,0,0,15" TextWrapping="Wrap"/>
                        <TextBlock Text="• Ultimate Performance power" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="• Kill background apps" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="• Network optimization" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="• Disable updates" FontSize="11" Margin="0,0,0,15"/>
                        <Button Content="Load Profile" Click="LoadGaming_Click" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <!-- Work Profile -->
                <Border Grid.Column="1" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="5,0"
                       MouseLeftButtonDown="WorkProfile_Click" Cursor="Hand">
                    <StackPanel>
                        <TextBlock Text="💼 Work" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Balanced for productivity" FontSize="12" Margin="0,0,0,15" TextWrapping="Wrap"/>
                        <TextBlock Text="• Balanced power mode" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="• Keep productivity apps" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="• Moderate optimization" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="• Enable updates" FontSize="11" Margin="0,0,0,15"/>
                        <Button Content="Load Profile" Click="LoadWork_Click" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <!-- Battery Saver Profile -->
                <Border Grid.Column="2" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="10,0,0,0"
                       MouseLeftButtonDown="BatteryProfile_Click" Cursor="Hand">
                    <StackPanel>
                        <TextBlock Text="🔋 Battery Saver" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Maximize battery life" FontSize="12" Margin="0,0,0,15" TextWrapping="Wrap"/>
                        <TextBlock Text="• Power saver mode" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="• Kill heavy apps" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="• Reduce performance" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="• Dim display" FontSize="11" Margin="0,0,0,15"/>
                        <Button Content="Load Profile" Click="LoadBattery_Click" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Custom Profiles -->
            <TextBlock Text="Your Custom Profiles" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,15"/>
            
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="4" Padding="0" Margin="0,0,0,15">
                <ListView x:Name="CustomProfilesListView"
                         Height="200"
                         BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Profile Name" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ProfileName}" FontWeight="SemiBold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Description" Width="300">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Description}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Created" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Created}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                <Button Content="➕ Create New Profile" 
                       Click="CreateProfile_Click"
                       Padding="15,8"
                       Margin="0,0,10,0"
                       Style="{StaticResource AccentButtonStyle}"/>
                <Button Content="📥 Load Selected" 
                       Click="LoadCustom_Click"
                       Padding="15,8"
                       Margin="0,0,10,0"/>
                <Button Content="🗑️ Delete Selected" 
                       Click="DeleteProfile_Click"
                       Padding="15,8"
                       Margin="0,0,10,0"/>
                <Button Content="💾 Export Profile" 
                       Click="ExportProfile_Click"
                       Padding="15,8"
                       Margin="0,0,10,0"/>
                <Button Content="📂 Import Profile" 
                       Click="ImportProfile_Click"
                       Padding="15,8"/>
            </StackPanel>

            <!-- Profile Settings -->
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="What gets saved in a profile?" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="✓ Power plan settings" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Text="✓ Startup programs" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Text="✓ Services configuration" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Text="✓ Network settings" FontSize="12" Margin="0,0,0,5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="✓ Visual effects" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Text="✓ Privacy settings" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Text="✓ Auto-pilot configuration" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Text="✓ Custom tweaks" FontSize="12" Margin="0,0,0,5"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
