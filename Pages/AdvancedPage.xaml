                    <Button Content="FULL OPTIMIZATION PACK" Click="FullOptimize_Click" 
                           Padding="20,12" FontWeight="Bold" Margin="0,0,0,10"
                           Style="{StaticResource AccentButtonStyle}"/>
                    <TextBlock Text="Applies all optimizations below automatically" 
                              Foreground="White" Opacity="0.8" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Registry Optimizations -->
