                <Button Content="âœ“ Optimize Visual Effects" Click="OptimizeVisuals_Click"
                       HorizontalAlignment="Stretch" Padding="15,10" Margin="0,5"/>
            </StackPanel>

            <!-- Performance Tweaks -->
            <TextBlock Text="Performance Tweaks" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,15"/>
            <StackPanel Margin="0,0,0,20">
                <Button Content="âš¡ Enable Ultimate Performance Power Plan" Click="UltimatePower_Click"
                       HorizontalAlignment="Stretch" Padding="15,10" Margin="0,5"/>
                <Button Content="âš¡ Disable SuperFetch/Prefetch" Click="DisableSuperfetch_Click"
                       HorizontalAlignment="Stretch" Padding="15,10" Margin="0,5"/>
                <Button Content="âš¡ Optimize Network Settings" Click="OptimizeNetwork_Click"
                       HorizontalAlignment="Stretch" Padding="15,10" Margin="0,5"/>
                <Button Content="âš¡ Clear All Temp Files &amp; Cache" Click="ClearAllTemp_Click"
                       HorizontalAlignment="Stretch" Padding="15,10" Margin="0,5"/>
                <Button Content="âš¡ Optimize SSD (TRIM)" Click="OptimizeSSD_Click"
                       HorizontalAlignment="Stretch" Padding="15,10" Margin="0,5"/>
            </StackPanel>

            <!-- Privacy -->
            <TextBlock Text="Privacy &amp; Security" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,15"/>
            <StackPanel Margin="0,0,0,20">
                <Button Content="ðŸ”’ Disable Location Tracking" Click="DisableLocation_Click"
                       HorizontalAlignment="Stretch" Padding="15,10" Margin="0,5"/>
                <Button Content="ðŸ”’ Disable Activity History" Click="DisableActivityHistory_Click"
                       HorizontalAlignment="Stretch" Padding="15,10" Margin="0,5"/>
                <Button Content="ðŸ”’ Block Microsoft Telemetry IPs" Click="BlockTelemetryIPs_Click"
                       HorizontalAlignment="Stretch" Padding="15,10" Margin="0,5"/>
                <Button Content="ðŸ”’ Disable Advertising ID" Click="DisableAdID_Click"
                       HorizontalAlignment="Stretch" Padding="15,10" Margin="0,5"/>
            </StackPanel>

            <!-- Status -->
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,10,0,0">
                <TextBlock x:Name="StatusTextBlock" 
                          Text="Ready to optimize" 
                          TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
