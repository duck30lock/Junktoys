<Page x:Class="WindowsDebloater.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="About">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40,30,40,30" MaxWidth="700" HorizontalAlignment="Center">
            <!-- Logo/Icon -->
            <Border Width="120" 
                   Height="120" 
                   Background="{DynamicResource SystemControlHighlightAccentBrush}"
                   CornerRadius="60"
                   Margin="0,20,0,30"
                   HorizontalAlignment="Center">
                <TextBlock Text="ðŸ§¹" 
                          FontSize="60" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
            </Border>

            <!-- App Name -->
            <TextBlock Text="Junktoys" 
                      FontSize="32" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10"/>
            
            <TextBlock Text="Version 1.0.0" 
                      FontSize="16" 
                      HorizontalAlignment="Center"
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                      Margin="0,0,0,30"/>

            <!-- Description -->
            <TextBlock TextWrapping="Wrap" 
                      TextAlignment="Center"
                      FontSize="14"
                      Margin="0,0,0,30"
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                A PowerToys-inspired utility for keeping Windows clean and optimized. 
                Manage background apps, remove bloatware, optimize startup programs, 
                and fine-tune system services for better performance.
            </TextBlock>

            <!-- Info -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Â© 2025 Junktoys Team" 
                          FontSize="14"
                          HorizontalAlignment="Center"
                          Margin="0,5"/>
                <TextBlock Text="Built with WPF and ModernWPF" 
                          FontSize="13"
                          HorizontalAlignment="Center"
                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                          Margin="0,5"/>
            </StackPanel>

            <!-- License -->
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1"
                   CornerRadius="4"
                   Padding="20"
                   Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="License" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="This software is provided as-is without warranty. Use at your own risk." 
                              TextWrapping="Wrap"
                              FontSize="13"
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
