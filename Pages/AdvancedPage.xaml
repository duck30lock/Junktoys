<Page x:Class="WindowsDebloater.Pages.AdvancedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="Advanced">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40,30,40,30">
            <TextBlock Text="âš¡ Advanced Optimization" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <TextBlock Text="Powerful system tweaks for maximum performance" 
                      FontSize="14" 
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                      Margin="0,0,0,30"/>

            <!-- Quick Optimizations -->
