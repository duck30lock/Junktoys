<Page x:Class="WindowsDebloater.Pages.DiskAnalyzerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="DiskAnalyzer">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40,30,40,30">
            <TextBlock Text="ðŸ“ Disk Space Analyzer" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <TextBlock Text="Visualize what's eating your storage space" FontSize="14" 
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Margin="0,0,0,30"/>

            <!-- Drive Selection -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Select Drive:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <ComboBox x:Name="DriveComboBox" Width="150" SelectionChanged="DriveComboBox_SelectionChanged"/>
                <Button Content="ðŸ” Analyze" Click="Analyze_Click" Padding="20,8" Margin="10,0,0,0" 
                       Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>

            <!-- Drive Stats -->
            <Grid Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,7,0">
                    <StackPanel>
                        <TextBlock Text="Total Space" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock x:Name="TotalSpaceText" Text="0 GB" FontSize="28" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="7,0">
                    <StackPanel>
                        <TextBlock Text="Used Space" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock x:Name="UsedSpaceText" Text="0 GB" FontSize="28" FontWeight="Bold" Foreground="#FF6B6B" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="7,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Free Space" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock x:Name="FreeSpaceText" Text="0 GB" FontSize="28" FontWeight="Bold" Foreground="#00D900" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Usage Bar -->
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Disk Usage" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <ProgressBar x:Name="UsageProgressBar" Height="30" Value="0" Maximum="100"/>
                    <TextBlock x:Name="UsagePercentText" Text="0% Used" FontSize="14" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Top Space Consumers -->
            <TextBlock Text="Largest Folders" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,15"/>
            
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="4" Padding="0">
                <ListView x:Name="FoldersListView" Height="300" BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Folder Path" Width="400">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path}" FontWeight="SemiBold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Size" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Size}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="% of Drive" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Percentage}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <!-- Quick Clean Options -->
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Quick Clean Options" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    <Button Content="ðŸ—‘ï¸ Empty Recycle Bin" Click="EmptyRecycleBin_Click" Padding="15,8" Margin="0,0,0,8" HorizontalAlignment="Left"/>
                    <Button Content="ðŸ§¹ Clear Temp Files" Click="ClearTemp_Click" Padding="15,8" Margin="0,0,0,8" HorizontalAlignment="Left"/>
                    <Button Content="ðŸ“¦ Clear Download Folder" Click="ClearDownloads_Click" Padding="15,8" Margin="0,0,0,8" HorizontalAlignment="Left"/>
                    <Button Content="ðŸŒ Clear Browser Cache" Click="ClearBrowserCache_Click" Padding="15,8" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
