<Page x:Class="WindowsDebloater.Pages.RAMTurboPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="RAMTurbo">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40,30,40,30">
            <!-- Header -->
            <TextBlock Text="ðŸ’¾ RAM Turbo" 
                      FontSize="28" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,10"/>
            <TextBlock Text="Aggressive memory optimization and monitoring" 
                      FontSize="14" 
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                      Margin="0,0,0,30"/>

            <!-- RAM Stats Cards -->
            <Grid Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Total RAM" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock x:Name="TotalRAMText" Text="16 GB" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="Used RAM" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock x:Name="UsedRAMText" Text="8.2 GB" FontSize="24" FontWeight="Bold" Margin="0,5,0,0" Foreground="#FF6B6B"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                       BorderThickness="1" CornerRadius="8" Padding="20" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Available RAM" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock x:Name="AvailableRAMText" Text="7.8 GB" FontSize="24" FontWeight="Bold" Margin="0,5,0,0" Foreground="#00D900"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- RAM Usage Bar -->
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="RAM Usage" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <ProgressBar x:Name="RAMProgressBar" Height="30" Value="51" Maximum="100" Margin="0,0,0,10"/>
                    <TextBlock x:Name="RAMPercentText" Text="51% Used" FontSize="14" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Control Buttons -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="âš¡ Clear RAM Now" 
                       Click="ClearRAM_Click"
                       Padding="20,12"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,10,0"
                       Style="{StaticResource AccentButtonStyle}"/>

                <Button Grid.Column="1" Content="ðŸ”„ Empty Standby List" 
                       Click="EmptyStandby_Click"
                       Padding="20,12"
                       FontSize="14"
                       Margin="0,0,10,0"/>

                <Button Grid.Column="2" Content="ðŸ§¹ Garbage Collection" 
                       Click="GarbageCollect_Click"
                       Padding="20,12"
                       FontSize="14"/>
            </Grid>

            <!-- Auto-Clear Settings -->
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Auto-Clear Settings" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <CheckBox x:Name="AutoClearCheckBox" 
                             Content="Enable auto-clear when RAM usage exceeds threshold"
                             Margin="0,0,0,15"
                             Checked="AutoClear_Changed"
                             Unchecked="AutoClear_Changed"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Threshold: " VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Slider x:Name="ThresholdSlider" 
                               Width="200" 
                               Minimum="50" 
                               Maximum="95" 
                               Value="80" 
                               TickFrequency="5"
                               TickPlacement="BottomRight"
                               ValueChanged="ThresholdSlider_Changed"/>
                        <TextBlock x:Name="ThresholdText" Text="80%" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
                    </StackPanel>

                    <CheckBox x:Name="AggressiveModeCheckBox" 
                             Content="Aggressive mode (clear every 30 seconds when active)"
                             Margin="0,0,0,10"/>
                </StackPanel>
            </Border>

            <!-- Top Memory Consumers -->
            <TextBlock Text="Top Memory Consumers" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,15"/>
            
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1" CornerRadius="4" Padding="0">
                <ListView x:Name="MemoryListView"
                         Height="250"
                         BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Process" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ProcessName}" FontWeight="SemiBold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Memory (MB)" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding MemoryMB}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="% of Total" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Percentage}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="PID" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ProcessId}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <Button Content="ðŸ”„ Refresh" 
                   Click="Refresh_Click"
                   Margin="0,10,0,0"
                   Padding="15,8"
                   HorizontalAlignment="Left"/>
        </StackPanel>
    </ScrollViewer>
</Page>
